<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView_mandar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="41dp"
        app:cardBackgroundColor="@color/cardviewcolor"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/mandar_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="21dp"

                android:text="Mandar Mathure"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/mandar_name1"
                android:layout_marginBottom="16dp"
                android:text="mmathure@syr.edu"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:typeface="monospace" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_nita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="72dp"
        app:cardBackgroundColor="@color/cardviewcolor"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/cardView_mandar"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="372dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/mandar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="21dp"

                android:text="Nita Disale"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/mandar_name"
                android:layout_marginBottom="12dp"
                android:text="nbdisale@syr.edu"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:typeface="monospace" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>