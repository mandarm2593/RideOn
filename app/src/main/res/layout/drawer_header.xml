<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black1_wallpaper"

    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:text="Mandar Mathure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image12"

        android:id="@+id/ppname"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/phemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ppname"
        android:layout_below="@+id/ppname"
        android:text="mmathure@syr.edu"
        android:textColor="@android:color/background_light" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_image12"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/empty_profile"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>