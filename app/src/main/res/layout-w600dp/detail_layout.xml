<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black1_wallpaper"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/hostedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Hosted By : "
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="6dp"
        android:layout_below="@+id/from"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_header"
        android:layout_marginTop="20dp"
        android:text="Date : "
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date_header"
        android:layout_below="@+id/hostedby"
        android:layout_marginTop="27dp"
        android:text="Time : "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/cost_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost/Person in $ : "
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/whitearrow"
        android:layout_alignStart="@+id/capacity_header" />

    <TextView
        android:id="@+id/capacity_header"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Capacity : "
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/timedetail"
        android:layout_alignStart="@+id/ride_details_detail"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hostedby"
        android:layout_alignBottom="@+id/hostedby"
        android:layout_toEndOf="@+id/hostedby"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/timedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/time_header"
        android:layout_toEndOf="@+id/time_header"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/datedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timedetail"
        android:layout_alignTop="@+id/date_header"
        android:text="TextView"
        android:textColor="@color/authui_inputTextColor"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/capacitydetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/authui_inputTextColor"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/capacity_header"
        android:layout_alignBottom="@+id/capacity_header"
        android:layout_toEndOf="@+id/capacity_header" />

    <TextView
        android:id="@+id/costdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cost_header"
        android:layout_alignBottom="@+id/cost_header"
        android:layout_toEndOf="@+id/cost_header"
        android:text="TextView"
        android:textColor="@color/authui_inputTextColor"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="From"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/ride_details_detail"
        android:layout_toEndOf="@+id/hostedby" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/number_header"
        android:layout_alignEnd="@+id/totextd"
        android:layout_marginEnd="10dp" />


    <TextView
        android:id="@+id/number_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999-999-9999"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/datedetail"
        android:layout_toEndOf="@+id/cost_header" />

    <TextView
        android:id="@+id/ride_details_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Ride Details!"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="38sp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/totextd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ride_details_detail"
        android:layout_alignTop="@+id/whitearrow"
        android:text="To"
        android:textColor="@color/authui_inputTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/whitearrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/whiteicon"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/cost_header"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="6dp" />

</RelativeLayout>
